@using WebQuanLyBanHang.Utilities.ViewModel;
@using WebQuanLyBanHang.Utilities;
@model ResponseData<AppointmentScheduleView>
@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<div class="card-body table-border-style">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Khách</th>
                    <th>Ngày hẹn</th>
                    <th>Nội dung hẹn</th>
                    <th class="text-center">Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.PhoneNumber</td>
                        <td>@item.DateAppointment.Value.ToString("dd/MM/yyyy")</td>
                        <td>@item.Note</td>
                        <td class="text-center">
                            <button class="btn btn-success" onclick="edit('@item.Id')" title="Sửa">
                                <i class="fa fa-wrench" aria-hidden="true"></i>
                                Sửa</button>
                            <button class="btn btn-danger" onclick="del('@item.Id')" title="Xóa">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                                Xóa</button>                        
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div>
            @await Component.InvokeAsync("Paging", Model)
        </div>
    </div>
</div>
